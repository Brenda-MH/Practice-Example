erDiagram

    STUDENT {
        string studentId PK
        string name
        string email
        string phoneNumber
    }

    EXAM {
        string examId PK
        string subject
        number maxScore
        date examDate
    }

    QUESTION {
        string questionId PK
        string examId FK
        string questionText
        string type
        string date PK
        number maxPoints
    }

    MULTIPLE_CHOICE_QUESTION {
        string questionId PK, FK
        array options
        string correctOption
    }

    OPEN_QUESTION {
        string questionId PK, FK
        string correctAnswer
    }

    MATCHING_QUESTION {
        string questionId PK, FK
        object pairs
    }

    EXAM_RESULT {
        string resultId PK
        string studentId FK
        string examId FK
        date submittedAt
        number totalScore
    }

    ANSWER {
        string answerId PK
        string resultId FK
        string questionId FK
        string InCorrect
        string studentAnswer
        number awardedPoints
    }

    EXAM ||--o{ QUESTION : contains

    QUESTION ||--|| MULTIPLE_CHOICE_QUESTION : can_be
    QUESTION ||--|| OPEN_QUESTION : can_be
    QUESTION ||--|| MATCHING_QUESTION : can_be

    STUDENT ||--o{ EXAM_RESULT : has
    EXAM ||--o{ EXAM_RESULT : produces

    EXAM_RESULT ||--o{ ANSWER : contains
    QUESTION ||--o{ ANSWER : is_answered_in
